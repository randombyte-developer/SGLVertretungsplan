<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="16dp"
    android:gravity="center_horizontal">

    <de.randombyte.sglvertretungsplan.customviews.VerticalSwitcher
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gk_lk_switcher"
        android:textSize="6sp"
        android:layout_gravity="center_vertical"
        app:entries="@array/gk_lk_switcher_entries" />

    <de.randombyte.sglvertretungsplan.customviews.VerticalSwitcher
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kurs_nummer_switcher"
        android:textSize="6sp"
        android:layout_gravity="center_vertical"
        app:entries="@array/kurs_nummer_switcher_entries"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="-"
        android:textSize="40sp"
        android:gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"/>

    <de.randombyte.sglvertretungsplan.customviews.VerticalSwitcher
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fach_switcher"
        android:textSize="6sp"
        android:layout_gravity="center_vertical"
        app:entries="@array/fach_switcher_entries"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

</LinearLayout>