<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="1. Vertretung"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingTop="8dp"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:textSize="16sp"
        android:paddingBottom="4dp"
        android:alpha="0.87"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vertreter"
        android:text="Vertreter: STR"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="4dp"
        android:layout_below="@id/title"
        android:textSize="14sp"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:textColor="@android:color/black"
        android:alpha="0.54"/>

    <!--paddignbottom mÃ¼sste eig. da sein, hat aber keine auswirkung da alles 88dp-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/room"
        android:text="Raum: R05"
        android:layout_below="@id/vertreter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:alpha="0.54"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/statt"
        android:text="Statt: BIE"
        android:layout_below="@id/title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:alpha="0.54"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fach"
        android:text="Fach: M"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/vertreter"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"/>

</RelativeLayout>